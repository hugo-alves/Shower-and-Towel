<div class="text-center ">
  <h1>Bookings </h1>
  <div class="container">
    <% @bookings.each do |booking| %>
    <div class="grey-wrapper wrapper text-left">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <div class="text-center">
          <p><%= cl_image_tag(booking.bathroom.picture, :class => "bath-picture", :width => 150, :height => 100, :crop => :fill) %></p>
        </div>
          <p>Name: <%= booking.user.name%></p>
          <p>Address: <%= booking.bathroom.address %></p>
          <p>Price: <%= booking.price %>â‚¬</p>
          <p>Boook date: <%= booking.book_time.strftime("%d %m %Y, %Hh%M") %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-2 col-xs-offset-5">
        <p><%= link_to 'Show', booking_path(booking), class: 'btn btn-default btn-show' %></p>
      </div>
    </div>
    <% end %>
</div>
