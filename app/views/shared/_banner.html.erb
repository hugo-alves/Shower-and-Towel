<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path('banner.jpeg') %>);">
  <div class="content">
    <h1>Shower and Towel</h1>
    <p>Clean your smelly ass everywhere</p>
    <% if user_signed_in? %>
      <%= link_to "Take a shower", bathrooms_path, class:"btn btn-success" %>
      <%= link_to "Announce your Bathroom", new_bathroom_path, class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Take a shower", new_user_registration_path, class:"btn btn-success" %>
      <%= link_to "Announce your Bathroom", new_user_registration_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
