<div class="row">
      <div class="col-sm-6 col-sm-offset-3">
      <div class="grey-wrapper wrapper">
        <%= simple_form_for @bathroom do |f| %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :address %>
        <%= f.input :towel,
        :collection => [['Available', true], ['Not Available', false]],
        :as => :radio_buttons,
        :item_wrapper_class => 'radio-inline' %>
        <%= f.input :shower_gel,
        :collection => [['Available', true], ['Not Available', false]],
        :as => :radio_buttons,
        :item_wrapper_class => 'radio-inline' %>
        <%= f.input :shampoo,
        :collection => [['Available', true], ['Not Available', false]],
        :as => :radio_buttons,
        :item_wrapper_class => 'radio-inline' %>
        <%= f.input :category,
        :collection => [['Bathtub', 'Bathtub'], ['Shower', 'Shower']],
        :as => :radio_buttons,
        :item_wrapper_class => 'radio-inline' %>
        <%= f.input :accepted_gender,
        :collection => [['Female', 'Female'], ['Male', 'Male'], ['Both', 'Both']],
        :as => :radio_buttons,
        :item_wrapper_class => 'radio-inline' %>
        <%= f.input :picture_cache, as: :hidden %>
        <%= f.input :picture %>
      </div>
      </div>
    </div>
    <p> <%= f.button :submit, class:"btn btn-default btn-edit-profil" %></p>
    <% end %>
