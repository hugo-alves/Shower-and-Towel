<div class="text-center ">
<h1>Bathroom </h1>
<div class="container">
<div class="form-inputs grey-wrapper wrapper text-left">
<p>Address: <%= @bathroom.address %></p>
<p>Price: <%= @bathroom.price %></p>
<p>Accepted gender: <%= @bathroom.accepted_gender %></p>
 </div>
  <p><%= link_to 'Instant Book', bathroom_path(), class: 'btn btn-alarm', id:"btn-booked" %></p>
</div>
</div>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        center = { lat: <%= @bathroom.latitude %>, lng: <%= @bathroom.longitude %> }
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
